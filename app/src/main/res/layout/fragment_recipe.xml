<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
             <variable name="viewmodel" type="com.duongtung.cookingman.fragment.recipe.RecipeViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_30dp"
            >
        <com.duongtung.cookingman.customview.CustomTextView
                android:id="@+id/tv_lastRecipe"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="30dp"
                android:textSize="@dimen/textview_main__tittle_size"
                android:text="@string/tvAllrecipe"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <com.duongtung.cookingman.customview.CustomTextView
                android:id="@+id/tv_findAll"
                android:layout_marginTop="@dimen/itemRecipe_marginTop"
                android:gravity="center"
                android:textSize="@dimen/textview_main__content_size"
                android:text="@string/tvFindall"
                app:layout_constraintTop_toBottomOf="@id/tv_lastRecipe"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerviewRecipe"
                android:layout_marginTop="10dp"
                android:padding="@dimen/itemRecipe_padding_iconlike"
                app:layout_constraintTop_toBottomOf="@id/tv_findAll"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="match_parent"
                app:adapter="@{viewmodel.adapter}"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_height="0dp">

        </androidx.recyclerview.widget.RecyclerView>
        <ProgressBar
                android:id="@+id/pg_loading"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabADD"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_add_black_24dp"
                app:fabSize="normal"
                android:tint="@color/white"
                android:backgroundTint="@color/colorBgsentChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
        </com.google.android.material.floatingactionbutton.FloatingActionButton>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
