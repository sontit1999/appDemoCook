<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >
      <data>
          <variable
                  name="viewmodel"
                  type="com.duongtung.cookingman.ui.recipefood.RecipeViewModel" />
      </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.recipefood.RecipeActivity">
        <RelativeLayout
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:orientation="vertical"
                android:background="#e8e8e8"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <include
                    android:id="@+id/actionbar"
                    layout="@layout/actionbar_chatlist"></include>
            <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabs"
                    app:tabMode="fixed"
                    android:layout_below="@+id/actionbar"
                    app:tabSelectedTextColor="@color/tvGetStarted"
                    app:tabIndicatorColor="@color/tvGetStarted"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
            </com.google.android.material.tabs.TabLayout>
            <ImageView
                    android:id="@+id/iv_banner"
                    android:layout_below="@id/tabs"
                    android:scaleType="fitCenter"
                    android:src="@drawable/bg_recipe"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp">
            </ImageView>
            <View
                    android:background="#CCE6E3DF"
                    android:layout_above="@id/viewPager"
                    android:translationY="-15dp"
                    android:layout_marginHorizontal="35dp"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"></View>

            <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/iv_banner"
                    android:layout_alignParentBottom="true"
                    android:layout_marginHorizontal="25dp"
                    android:background="#FFFFFF"
                    android:translationY="-20dp">

            </androidx.viewpager.widget.ViewPager>
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab"
                    android:src="@drawable/ic_share_black_24dp"
                    app:fabSize="normal"
                    android:tint="@color/colorwhite"
                    android:onClick="@{()-> viewmodel.onClickFAB()}"
                    android:backgroundTint="@color/colorBgsentChat"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
            </com.google.android.material.floatingactionbutton.FloatingActionButton>
        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
