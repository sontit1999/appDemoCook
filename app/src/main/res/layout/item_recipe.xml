<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
           <variable name="post" type="com.duongtung.cookingman.model.Post"/>
            <variable
                    name="callback"
                    type="com.duongtung.cookingman.adapter.RecipeCallback" />
    </data>
   <androidx.cardview.widget.CardView
           android:layout_marginTop="20dp"
           android:elevation="@dimen/margin_10dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
       <androidx.constraintlayout.widget.ConstraintLayout
               android:background="@color/white"
               android:padding="@dimen/margin_10dp"
               android:layout_marginTop="@dimen/itemRecipe_marginTop"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
           <ImageView
                   android:id="@+id/iv_imagefood"
                   android:src="@drawable/food"
                   imageUrl="@{post.recipe.imageRecipe}"
                   android:layout_width="@dimen/itemRecipe_image_width"
                   android:layout_height="@dimen/itemRecipe_image_heigh"
                   android:scaleType="center"
                   android:onClick="@{()->callback.viewOnclick()}"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintLeft_toLeftOf="parent"
                   />
           <com.duongtung.cookingman.customview.TextViewWithFontAwesome
                   android:id="@+id/tvNameFood"
                   app:iconRight="@string/icon_bookmark"
                   app:iconTextSize="25sp"
                   app:iconColor="@color/colorRed"
                   android:drawablePadding="@dimen/margin_10dp"
                   app:layout_constraintTop_toTopOf="parent"
                   android:text="@{post.recipe.nameFood}"
                   android:textSize="@dimen/textview_main__tittle_size"
                   android:layout_marginHorizontal="@dimen/margin_10dp"
                   app:layout_constraintRight_toRightOf="parent"
                   app:layout_constraintLeft_toRightOf="@id/iv_imagefood"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content">
           </com.duongtung.cookingman.customview.TextViewWithFontAwesome>
           <com.duongtung.cookingman.customview.CustomTextView
                   android:id="@+id/tvGradient"
                   app:layout_constraintTop_toBottomOf="@id/tvNameFood"
                   android:text="Thịt lợn ba chỉ,Trứng cút 10 quả, 3 quả trứng gà,Nước mắm ngonNước dừa tươi,
Tỏi, ớt, hành lá, đường"
                   android:layout_marginTop="@dimen/margin_10dp"
                   android:textSize="12sp"
                   android:layout_marginHorizontal="@dimen/margin_10dp"
                   app:layout_constraintRight_toRightOf="parent"
                   app:layout_constraintLeft_toRightOf="@id/iv_imagefood"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content">
           </com.duongtung.cookingman.customview.CustomTextView>
           <com.duongtung.cookingman.customview.CustomTextView
               android:id="@+id/tvTime"
               android:text="@{post.time}"
               android:gravity="right"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintLeft_toRightOf="@id/iv_imagefood"
               android:layout_width="0dp"
                   app:layout_constraintTop_toBottomOf="@id/tvGradient"
               android:layout_marginHorizontal="@dimen/margin_10dp"
               android:layout_height="wrap_content">
           </com.duongtung.cookingman.customview.CustomTextView>
       </androidx.constraintlayout.widget.ConstraintLayout>
   </androidx.cardview.widget.CardView>

</layout>