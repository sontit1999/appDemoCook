<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
           <variable name="recipe" type="com.duongtung.cookingman.model.Recipe"/>
           <variable
                   name="callback"
                   type="com.duongtung.cookingman.adapter.RecipCallback" />
    </data>
   <androidx.cardview.widget.CardView
           android:layout_marginTop="20dp"
           android:elevation="@dimen/margin_10dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
       <androidx.constraintlayout.widget.ConstraintLayout
               android:background="@color/white"
               android:padding="@dimen/margin_10dp"
               android:layout_marginTop="@dimen/itemRecipe_marginTop"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
           <ImageView
                   android:id="@+id/iv_imagefood"
                   android:src="@drawable/food"
                   imageUrl="@{recipe.linkimg}"
                   android:onClick="@{(view)->callback.onRecipeClick(view,recipe)}"
                   android:layout_width="@dimen/itemRecipe_image_width"
                   android:layout_height="@dimen/itemRecipe_image_heigh"
                   android:scaleType="center"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintLeft_toLeftOf="parent"
                   />
           <com.duongtung.cookingman.customview.TextViewWithFontAwesome
                   android:id="@+id/tvNameFood"
                   android:textColor="@color/colorBlack"
                   app:layout_constraintTop_toTopOf="parent"
                   android:text="@{recipe.name}"
                   android:textSize="@dimen/textview_main__tittle_size"
                   android:onClick="@{(view)->callback.onRecipeClick(view,recipe)}"
                   android:layout_marginHorizontal="@dimen/margin_10dp"
                   app:layout_constraintRight_toLeftOf="@id/tvSave"
                   app:layout_constraintLeft_toRightOf="@id/iv_imagefood"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content">
           </com.duongtung.cookingman.customview.TextViewWithFontAwesome>
           <com.duongtung.cookingman.customview.TextViewWithFontAwesome
                   android:id="@+id/tvSave"
                   app:iconRight="@string/icon_bookmark"
                   app:iconTextSize="25sp"
                   android:onClick="@{(view)->callback.onLikeClick(view,recipe)}"
                   app:iconColor="@color/colorRed"
                   android:drawablePadding="@dimen/margin_10dp"
                   app:layout_constraintTop_toTopOf="parent"
                   android:layout_marginHorizontal="@dimen/margin_10dp"
                   app:layout_constraintRight_toRightOf="parent"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">
           </com.duongtung.cookingman.customview.TextViewWithFontAwesome>
           <com.duongtung.cookingman.customview.CustomTextView
                   android:id="@+id/tvGradient"
                   app:layout_constraintTop_toBottomOf="@id/tvNameFood"
                   android:text="@{recipe.describe}"
                   android:layout_marginTop="@dimen/margin_10dp"
                   android:textSize="12sp"
                   android:onClick="@{(view)->callback.onRecipeClick(view,recipe)}"
                   android:layout_marginHorizontal="@dimen/margin_10dp"
                   app:layout_constraintRight_toRightOf="parent"
                   app:layout_constraintLeft_toRightOf="@id/iv_imagefood"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content">
           </com.duongtung.cookingman.customview.CustomTextView>
           <com.duongtung.cookingman.customview.CustomTextView
               android:id="@+id/tvCreatandTime"
               android:text="@{recipe.nameauthor}"
               android:gravity="left"
                   android:onClick="@{(view)->callback.onAuthorClick(view,recipe)}"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintLeft_toRightOf="@id/iv_imagefood"
               android:layout_width="0dp"
                   app:layout_constraintTop_toBottomOf="@id/tvGradient"
               android:layout_marginHorizontal="@dimen/margin_10dp"
               android:layout_height="wrap_content">
           </com.duongtung.cookingman.customview.CustomTextView>
       </androidx.constraintlayout.widget.ConstraintLayout>
   </androidx.cardview.widget.CardView>

</layout>