<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="typefood" type="com.duongtung.cookingman.model.TypeFood"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@drawable/custom_item_recyclerfood"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="270dp"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/imgTypeFood"
                android:scaleType="fitXY"
                android:layout_width="338dp"
                android:src="@drawable/protein"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="338dp"
                app:layout_constraintLeft_toLeftOf="parent"

        />

        <ImageView
                android:id="@+id/imgBtnadd"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitCenter"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/custom_ic_add"
                android:src="@drawable/ic_add"/>

        <TextView
                android:id="@+id/txtType"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/imgTypeFood"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="@{typefood.title}"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/txtDescrible"
                android:text="@{typefood.describe}"
                android:textSize="20sp"
                android:layout_marginVertical="20dp"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@+id/txtType"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
