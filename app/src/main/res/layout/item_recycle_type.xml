<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="typefood" type="com.duongtung.cookingman.model.TypeFood"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@drawable/custom_item_recyclerfood"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/heigh_itemTypeFood">

        <ImageView
                android:id="@+id/imgTypeFood"
                android:scaleType="fitXY"
                android:layout_width="@dimen/width_image_itemtypefood"
                android:src="@drawable/protein"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_height="@dimen/height_image_itemtypefood"
                app:layout_constraintLeft_toLeftOf="parent"
        />
        <CheckBox
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:button="@drawable/customcheckbox"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/custom_ic_add">
        </CheckBox>

        <TextView
                android:id="@+id/txtType"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/imgTypeFood"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="@{typefood.title}"
                android:textSize="@dimen/textview_main_size"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/txtDescrible"
                android:text="@{typefood.describe}"
                android:textSize="@dimen/textview_describe_item_typeFood_size"
                android:padding="15dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@+id/txtType"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
