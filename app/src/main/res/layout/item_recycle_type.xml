<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/custom_item_recyclerfood"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="270dp"
        android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/imgTypeFood"
            android:scaleType="fitStart"
            android:layout_width="278dp"
            android:src="@drawable/protein"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="270dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
                android:id="@+id/imgBtnadd"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitCenter"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/custom_ic_add"
                android:src="@drawable/ic_add"/>

    <TextView
            android:id="@+id/txtType"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/imgTypeFood"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="Protein"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/txtDescrible"
            android:text="Lorum ipsum dolor sit amet"
            android:textSize="20sp"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/txtType"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>