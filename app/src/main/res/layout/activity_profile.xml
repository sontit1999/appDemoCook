<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        >
    <data>
        <variable
                name="viewmodel"
                type="com.duongtung.cookingman.ui.profile.ProfileViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.profile.ProfileActivity">
        <RelativeLayout
                android:id="@+id/containerActionbar"
                android:paddingHorizontal="@dimen/actionbar_padding"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:gravity="center_vertical"
                android:background="@color/colorActionbar"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize">
            <ImageView
                    android:id="@+id/iv_navigation"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/actionbar_width_icon"
                    android:layout_height="@dimen/actionbar_heigh_icon"
                    android:src="@drawable/ic_chevron_left_black_24dp"
                    />
            <TextView
                    android:id="@+id/tvReturn"
                    android:layout_toRightOf="@+id/iv_navigation"
                    android:text="return"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/textsize_tvActionbar"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/colorwhite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/tv_nameAuthor"
                    android:layout_centerInParent="true"
                    android:text="Sơn tít"
                    android:gravity="center"
                    android:layout_toRightOf="@id/tvReturn"
                    android:layout_toLeftOf="@id/tv_follow"
                    android:textSize="@dimen/textsize_tvActionbar"
                    android:textColor="@color/colorwhite"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
            </TextView>
            <TextView
                    android:id="@+id/tv_follow"
                    android:text="follow"
                    android:paddingVertical="7dp"
                    android:paddingHorizontal="20dp"
                    android:background="@drawable/bg_follow"
                    android:textColor="@color/colorwhite"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
            </TextView>
        </RelativeLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/containerInfor"
                android:paddingBottom="20dp"
                android:paddingHorizontal="5dp"

                app:layout_constraintTop_toBottomOf="@id/containerActionbar"
                android:background="@color/colorActionbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/ivAvatar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="22dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:src="@drawable/gaixinh"
                    />

            <com.duongtung.cookingman.customview.MyTextView
                    android:id="@+id/tvName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="36dp"
                    android:text="@string/banana"
                    android:textColor="@color/colorwhite"
                    android:textSize="@dimen/textview_main_size"
                    app:layout_constraintLeft_toRightOf="@id/ivAvatar"
                    app:layout_constraintRight_toLeftOf="@id/iconChat"
                    app:layout_constraintTop_toTopOf="parent" />
            <com.duongtung.cookingman.customview.MyTextView
                    android:id="@+id/tvNumberReciper"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="2000 Recipe"
                    android:textColor="@color/colorwhite"
                    app:layout_constraintLeft_toRightOf="@id/ivAvatar"
                    app:layout_constraintRight_toLeftOf="@id/iconChat"
                    app:layout_constraintTop_toBottomOf="@id/tvName" />
            <ImageView
                    android:id="@+id/iconChat"
                    android:src="@drawable/iconchat"
                    android:layout_width="@dimen/size_iconchat"
                    android:layout_marginTop="36dp"
                    app:layout_constraintLeft_toRightOf="@id/tvName"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_height="@dimen/size_iconchat"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerviewProfile"
                android:layout_width="match_parent"
                adapter="@{viewmodel.adapter}"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/containerInfor"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="0dp">
        </androidx.recyclerview.widget.RecyclerView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
