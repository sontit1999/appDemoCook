<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        >
    <data>
        <variable
                name="viewmodel"
                type="com.duongtung.cookingman.ui.profile.ProfileViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.profile.ProfileActivity">
        <RelativeLayout
                android:id="@+id/containerActionbar"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:gravity="center_vertical"
                android:background="@color/colorActionbar"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize">
            <ImageView
                    android:id="@+id/iv_navigation"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:src="@drawable/ic_chevron_left_black_24dp"
                    />
            <TextView
                    android:id="@+id/tvReturn"
                    android:layout_toRightOf="@+id/iv_navigation"
                    android:text="return"
                    android:layout_centerVertical="true"
                    android:textSize="20sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/colorwhite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/tv_nameAuthor"
                    android:layout_centerInParent="true"
                    android:text="MiltongRn"
                    android:textSize="20sp"
                    android:textColor="@color/colorwhite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
            <TextView
                    android:id="@+id/tv_follow"
                    android:text="follow"
                    android:paddingVertical="7dp"
                    android:paddingHorizontal="20dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/bg_follow"
                    android:textColor="@color/colorwhite"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
        </RelativeLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/containerInfor"
                android:paddingBottom="30dp"
                app:layout_constraintTop_toBottomOf="@id/containerActionbar"
                android:background="@color/colorActionbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/ivAvatar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="22dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:src="@drawable/gaixinh"
                    />
            <TextView
                    android:id="@+id/tvName"
                    android:text="Banana Ice scream"
                    android:textStyle="italic"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="15dp"
                    android:textSize="18sp"
                    android:textColor="@color/colorwhite"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/ivAvatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/tvNumberRecipe"
                    android:text="200000"
                    android:textStyle="italic"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:textColor="#facad0"
                    app:layout_constraintTop_toBottomOf="@id/tvName"
                    app:layout_constraintLeft_toRightOf="@id/ivAvatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/tvRecipe"
                    android:text="Recipes"
                    android:textStyle="italic"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#facad0"
                    app:layout_constraintTop_toBottomOf="@id/tvName"
                    app:layout_constraintLeft_toRightOf="@id/tvNumberRecipe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <ImageView
                    android:id="@+id/iconChat"
                    android:src="@drawable/iconchat"
                    android:layout_width="60dp"
                    android:layout_marginTop="36dp"
                    android:layout_marginRight="40dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_height="60dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerviewProfile"
                android:layout_width="match_parent"
                adapter="@{viewmodel.adapter}"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/containerInfor"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="0dp">
        </androidx.recyclerview.widget.RecyclerView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
