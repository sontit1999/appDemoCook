<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <data>

        <variable name="foodingredient" type="com.duongtung.cookingman.model.FoodIngredient"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/iv_nameIngredient"
                android:src="@drawable/orange"
                android:scaleType="fitCenter"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:imageUrl="@{foodingredient.imageFood}"
                android:layout_width="80dp"
                android:layout_height="80dp">
        </ImageView>
        <TextView
                android:id="@+id/tv_nameIngredient"
                android:text="@{foodingredient.nameFood}"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="23dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/iv_nameIngredient"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
        </TextView>
        <TextView
                android:id="@+id/tv_number"
                android:text="@{foodingredient.number}"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="23dp"
                android:textColor="@color/colorRed"
                android:layout_width="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/iv_nameIngredient"
                app:layout_constraintTop_toBottomOf="@id/tv_nameIngredient"
                android:layout_height="wrap_content">

        </TextView>
        <TextView
                android:id="@+id/tv_measure"
                android:text="@{foodingredient.measure}"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/colorGrey"
                android:layout_width="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/tv_number"
                app:layout_constraintTop_toBottomOf="@id/tv_nameIngredient"
                android:layout_height="wrap_content">
        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>