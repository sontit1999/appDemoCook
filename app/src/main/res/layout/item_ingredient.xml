<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <data>

        <variable name="foodingredient" type="com.duongtung.cookingman.model.FoodIngredient"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <com.duongtung.cookingman.customview.TextViewWithFontAwesome
                android:id="@+id/tv_nameIngredient"
                android:layout_marginTop="15dp"
                android:text="@{foodingredient.number1()}"
                app:iconLeft="@string/icon_add"
                app:iconColor="@color/colorRed"
                app:iconTextSize="20sp"
                android:drawablePadding="@dimen/margin_20dp"
                android:paddingRight="@dimen/margin_10dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textColor="@color/colorBlack"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
        </com.duongtung.cookingman.customview.TextViewWithFontAwesome>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>