<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        >
    <data>
        <variable
                name="comment"
                type="com.duongtung.cookingman.model.Comment" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/iv_Avatar"
                android:layout_width="60dp"
                app:imageUrl="@{comment.user.profileUrl}"
                android:layout_height="60dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:src="@drawable/gaixinh"
                />
        <TextView
                android:id="@+id/tv_name"
                android:text="@{comment.user.nickName}"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/colorBlack"
                app:layout_constraintLeft_toRightOf="@id/iv_Avatar"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
        </TextView>
        <ImageView
                android:id="@+id/iv_star"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_star_yellow"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="15dp"
                app:layout_constraintLeft_toRightOf="@id/tv_name"
                android:layout_width="20dp"
                android:layout_height="20dp">
        </ImageView>
        <TextView
                android:id="@+id/tv_numberStar"
                android:textColor="#d2d2d2"
                android:layout_marginLeft="5dp"
                android:text="@{comment.numberStar}"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="20dp"
                app:layout_constraintLeft_toRightOf="@id/iv_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

        </TextView>
        <TextView
                android:id="@+id/tv_contentComment"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="15dp"
                android:text="@{comment.content}"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_Avatar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
