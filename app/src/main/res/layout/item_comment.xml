<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        >
    <data>
        <variable
                name="comment"
                type="com.duongtung.cookingman.model.Comment" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="@dimen/itemcomment_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/iv_Avatar"
                android:layout_width="50dp"
                app:imageUrl="@{comment.linkavatar}"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:src="@drawable/gaixinh"
                />
        <com.duongtung.cookingman.customview.CustomTextView
                android:id="@+id/tv_name"
                android:text="@{comment.nickname}"
                android:layout_marginTop="@dimen/itemcomment_margintop"
                android:textSize="@dimen/textview_main_size"
                android:layout_marginLeft="@dimen/itemcomment_marginleft"
                app:layout_constraintRight_toRightOf="parent"
                android:textColor="@color/colorBlack"
                app:layout_constraintLeft_toRightOf="@id/iv_Avatar"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
        </com.duongtung.cookingman.customview.CustomTextView>
        <com.duongtung.cookingman.customview.TextViewWithFontAwesome
                android:id="@+id/tv_time"
                android:layout_marginTop="@dimen/itemcomment_margintop"
                android:textSize="10sp"
                android:text="@{comment.timecomment}"
                android:gravity="right"
                app:iconLeft="&#xf005;&#xf005;&#xf005;&#xf005;&#xf005;"
                app:iconTextSize="@dimen/textview_main__content_size"
                app:iconColor="@color/yellow"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_Avatar"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
        </com.duongtung.cookingman.customview.TextViewWithFontAwesome>
        <com.duongtung.cookingman.customview.CustomTextView
                android:id="@+id/tv_contentComment"
                android:layout_marginTop="@dimen/itemcomment_margintop"
                android:textSize="@dimen/text_size_recipeActivty"
                android:text="@{comment.content}"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
        </com.duongtung.cookingman.customview.CustomTextView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
