<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="viewmodel" type="com.duongtung.cookingman.fragment.DirectionViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="@dimen/fragment_direction_padding"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
           <com.duongtung.cookingman.customview.TextViewWithFontAwesome
                   android:id="@+id/tvNameFood"
                   android:textSize="@dimen/textview_main__tittle_size"
                   android:textColor="@color/colorBlack"
                   android:text="Lemman Drink"
                   android:gravity="center"
                   app:layout_constraintLeft_toLeftOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintRight_toRightOf="parent"
                   android:layout_height="wrap_content"
                   android:layout_width="0dp"
                   >

           </com.duongtung.cookingman.customview.TextViewWithFontAwesome>
        <RatingBar
                android:id="@+id/ratingBar"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvNameFood"
                app:layout_constraintLeft_toLeftOf="parent"
                android:numStars="5"
                android:stepSize="1"
                android:scaleX="0.8"
                android:scaleY="0.7"
                android:rating="3"
                android:layout_marginTop="7dp"
                android:progressTint="@color/yellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
        </RatingBar>
        <ScrollView
                app:layout_constraintTop_toBottomOf="@id/ratingBar"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="0dp">
            <com.duongtung.cookingman.customview.TextViewWithFontAwesome
                    android:id="@+id/tv_direction"
                    android:text="@{viewmodel.direction}"
                    android:padding="@dimen/fragment_direction_padding"
                    android:layout_marginTop="15dp"
                    android:textSize="@dimen/textview_main__content_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
            </com.duongtung.cookingman.customview.TextViewWithFontAwesome>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
