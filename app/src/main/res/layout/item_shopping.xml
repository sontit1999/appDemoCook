<?xml version="1.0" encoding="utf-8"?>
<layout>
        <data>
                <variable
                        name="ingredient"
                        type="com.duongtung.cookingman.model.FoodIngredient" />
        </data>
        <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                        app:cardUseCompatPadding="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.constraintlayout.widget.ConstraintLayout
                                android:padding="@dimen/margin_10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                        android:id="@+id/iv_gredient"
                                        android:src="@drawable/gaixinh"
                                        android:scaleType="fitXY"
                                        android:padding="10dp"
                                        imageUrl="@{ingredient.imageIngredient}"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintLeft_toLeftOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        android:layout_width="70dp"
                                        android:layout_height="70dp">
                                </ImageView>
                                <com.duongtung.cookingman.customview.CustomTextView
                                        android:id="@+id/tv_nameGredient"
                                        android:text="@{ingredient.nameIngredient}"
                                        android:textSize="@dimen/textview_main__content_size"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        android:layout_marginLeft="@dimen/margin_10dp"
                                        app:layout_constraintRight_toLeftOf="@id/tv_number"
                                        android:textColor="@color/colorBlack"
                                        app:layout_constraintLeft_toRightOf="@id/iv_gredient"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"/>
                                <com.duongtung.cookingman.customview.TextViewWithFontAwesome
                                        android:id="@+id/tv_number"
                                        android:text="@{ingredient.number()}"
                                        android:gravity="center"
                                        app:iconLeft="@string/icon_uninscrea"
                                        app:iconRight="@string/icon_increase"
                                        android:layout_marginRight="@dimen/margin_10dp"
                                        app:iconColor="@color/colorRed"
                                        app:iconTextSize="15sp"
                                        android:drawablePadding="@dimen/margin_20dp"
                                        app:layout_constraintRight_toRightOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">
                                </com.duongtung.cookingman.customview.TextViewWithFontAwesome>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
        </LinearLayout>
</layout>