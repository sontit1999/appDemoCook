<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="post" type="com.duongtung.cookingman.model.Post"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:paddingBottom="30dp"
            android:background="@color/colorwhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/ivAvatar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="22dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:src="@drawable/gaixinh"
        />
        <TextView
                android:id="@+id/tvName"
                android:text="@{post.name}"
                android:textStyle="italic"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/colorBlack"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/ivAvatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tvNumberRecipe"
                android:text="200000"
                android:textStyle="italic"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/colorRed"
                app:layout_constraintTop_toBottomOf="@id/tvName"
                app:layout_constraintLeft_toRightOf="@id/ivAvatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tvRecipe"
                android:text="Recipes"
                android:textStyle="italic"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorGrey"
                app:layout_constraintTop_toBottomOf="@id/tvName"
                app:layout_constraintLeft_toRightOf="@id/tvNumberRecipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <ImageView
                   android:id="@+id/iconChat"
                   android:src="@drawable/iconchat"
                   android:layout_width="50dp"
                   android:layout_marginTop="36dp"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintRight_toRightOf="parent"
                   android:layout_height="50dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
