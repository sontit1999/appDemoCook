<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        >
    <data>
        <variable
                name="viewModel"
                type="com.duongtung.cookingman.ui.home.HomeViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@color/color_home"
            android:layout_height="match_parent"
            tools:context=".ui.home.HomeActivity">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/container_banner"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@drawable/bg_home"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/heigh_banner_home">
                <com.duongtung.cookingman.customview.TextViewWithFontAwesome
                        android:id="@+id/tvReturn"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:iconLeft="@string/icon_menu"
                        android:layout_marginTop="@dimen/margin_10dp"
                        app:iconTextSize="@dimen/textsize_tvActionbar"
                        android:textSize="@dimen/textsize_tvActionbar"
                        android:layout_marginLeft="@dimen/splash_margin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <com.duongtung.cookingman.customview.TextViewWithFontAwesome
                        android:id="@+id/tvSearch"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:iconLeft="@string/icon_search"
                        android:layout_marginRight="@dimen/margin_10dp"
                        android:layout_marginTop="@dimen/margin_10dp"
                        app:iconTextSize="@dimen/textsize_tvActionbar"
                        android:textSize="@dimen/textsize_tvActionbar"
                        android:layout_marginLeft="@dimen/splash_margin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <com.duongtung.cookingman.customview.TextViewWithFontAwesome
                        android:id="@+id/tvHome"
                        android:text="HOME"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:textColor="@color/white"
                        android:layout_gravity="center_horizontal"
                        android:textSize="@dimen/textsize_tvActionbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                   <com.duongtung.cookingman.customview.TextViewWithFontAwesome
                           android:id="@+id/tvHello"
                           app:layout_constraintLeft_toLeftOf="parent"
                           app:layout_constraintRight_toRightOf="parent"
                           app:layout_constraintBottom_toTopOf="@id/tvLetStart"
                           android:text="@string/say_hi"
                           android:textColor="@color/white"
                           android:textStyle="bold"
                           android:layout_marginHorizontal="@dimen/margin_10dp"
                           android:layout_marginBottom="@dimen/margin_10dp"
                           android:textSize="@dimen/textsize_title_home"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"/>
                   <com.duongtung.cookingman.customview.TextViewWithFontAwesome
                           android:id="@+id/tvLetStart"
                           android:text="@string/lesttart"
                           app:layout_constraintRight_toRightOf="parent"
                           app:layout_constraintLeft_toLeftOf="parent"
                           app:layout_constraintBottom_toBottomOf="parent"
                           android:layout_marginBottom="@dimen/margin_bottom_home"
                           android:textColor="@color/white"
                           android:layout_marginHorizontal="@dimen/margin_10dp"
                           android:textSize="@dimen/textsize_tvActionbar"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.cardview.widget.CardView
                android:id="@+id/cardview"
                app:layout_constraintTop_toBottomOf="@id/container_banner"
                android:layout_width="match_parent"
                android:translationY="-20dp"
                android:layout_marginHorizontal="@dimen/margin_10dp"
                android:layout_height="wrap_content">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/home_height_containerSearch">
                        <ImageView
                                android:id="@+id/iv_thia"
                                android:scaleType="fitXY"
                                android:src="@drawable/spoon"
                                android:layout_width="@dimen/home_height_containerSearch"
                                android:layout_height="match_parent">
                        </ImageView>
                       <com.duongtung.cookingman.customview.CustomEditText
                               android:layout_toLeftOf="@id/tv_micro"
                               android:layout_toRightOf="@id/iv_thia"
                               android:hint="Search recipe"
                               android:inputType="text"
                               android:paddingHorizontal="@dimen/margin_10dp"
                               android:background="@drawable/round_rect_shape"
                               android:layout_width="0dp"
                               android:layout_height="match_parent"></com.duongtung.cookingman.customview.CustomEditText>
                        <com.duongtung.cookingman.customview.TextViewWithFontAwesome
                                android:id="@+id/tv_micro"
                                android:layout_width="wrap_content"
                                app:iconTextSize="30sp"
                                android:layout_alignParentRight="true"
                                app:iconColor="@color/colorRed"
                                android:padding="@dimen/home_padding_honizatal_micro"
                                app:iconLeft="@string/icon_micro"
                                android:layout_height="match_parent">
                        </com.duongtung.cookingman.customview.TextViewWithFontAwesome>
                </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <ScrollView
                app:layout_constraintTop_toBottomOf="@id/cardview"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="#fafafa"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:textSize="@dimen/size_title_home"
                            android:layout_marginTop="@dimen/margin_10dp"
                            android:text="Food following"
                            android:layout_marginLeft="@dimen/margin_10dp"
                            android:textColor="@color/colorBlack"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                    </TextView>

                    <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerFoodFollew"
                            adapter="@{viewModel.adapter}"
                            android:layout_marginTop="@dimen/margin_10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/cardview"></androidx.recyclerview.widget.RecyclerView>

                    <TextView
                            android:textSize="@dimen/size_title_home"
                            android:layout_marginTop="@dimen/margin_10dp"
                            android:text="Special food"
                            android:layout_marginLeft="@dimen/margin_10dp"
                            android:textColor="@color/colorBlack"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                    </TextView>
                    <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerSpecialFood"
                            android:layout_marginTop="@dimen/margin_10dp"
                            app:layout_constraintTop_toBottomOf="@id/cardview"
                            adapter="@{viewModel.adapter}"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                    </androidx.recyclerview.widget.RecyclerView>
                    <TextView
                            android:textSize="@dimen/size_title_home"
                            android:layout_marginTop="@dimen/margin_10dp"
                            android:text="News recipe"
                            android:layout_marginLeft="@dimen/margin_10dp"
                            android:textColor="@color/colorBlack"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                    </TextView>
                    <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerFood"
                            android:layout_marginTop="@dimen/margin_10dp"
                            app:layout_constraintTop_toBottomOf="@id/cardview"
                            adapter="@{viewModel.adapter}"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                    </androidx.recyclerview.widget.RecyclerView>
                </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
