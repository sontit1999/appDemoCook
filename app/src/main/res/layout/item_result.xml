<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="post" type="com.duongtung.cookingman.model.Post"/>
        <variable
                name="callback"
                type="com.duongtung.cookingman.adapter.PostCallback" />
    </data>
    <androidx.cardview.widget.CardView
            app:cardUseCompatPadding="true"
            app:cardElevation="4dp"
            app:cardCornerRadius="5dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:background="@color/white"
                android:layout_marginTop="@dimen/itemRecipe_marginTop"
                android:padding="@dimen/margin_10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    imageUrl="@{post.recipe.imageRecipe}"
                    android:onClick="@{(view)->callback.onImageFoodClick(view,post)}"
                    android:scaleType="fitXY"
                    android:id="@+id/iv_food"
                    android:layout_width="180dp"
                    android:layout_height="150dp"></ImageView>
            <com.duongtung.cookingman.customview.CustomTextView
                    android:id="@+id/tv_nameFood"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/textview_main__tittle_size"
                    android:text="@{post.recipe.nameFood}"
                    android:paddingHorizontal="@dimen/margin_10dp"
                    app:layout_constraintRight_toLeftOf="@id/tv_more"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/iv_food"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"></com.duongtung.cookingman.customview.CustomTextView>
            <com.duongtung.cookingman.customview.CustomTextView
                    android:id="@+id/tv_timepost"
                    android:text="6/10/2019"
                    android:textSize="14sp"
                    android:paddingHorizontal="@dimen/margin_10dp"
                    android:layout_marginTop="@dimen/margin_10dp"
                    app:layout_constraintRight_toLeftOf="@id/tv_more"
                    app:layout_constraintTop_toBottomOf="@id/tv_nameFood"
                    app:layout_constraintLeft_toRightOf="@id/iv_food"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"></com.duongtung.cookingman.customview.CustomTextView>
            <com.duongtung.cookingman.customview.CustomTextView
                    android:id="@+id/tv_contentPost"
                    android:text="Hum nay tôi nấu món này.Nhìn ngon ko các bạn"
                    android:paddingHorizontal="@dimen/margin_10dp"
                    android:textSize="@dimen/textview_main__content_size"
                    android:layout_marginTop="@dimen/margin_10dp"
                    app:layout_constraintRight_toLeftOf="@id/tv_more"
                    app:layout_constraintTop_toBottomOf="@id/tv_timepost"
                    app:layout_constraintLeft_toRightOf="@id/iv_food"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"></com.duongtung.cookingman.customview.CustomTextView>
            <com.duongtung.cookingman.customview.TextViewWithFontAwesome
                    android:id="@+id/tv_more"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:iconTextSize="25sp"
                    android:paddingHorizontal="@dimen/margin_10dp"
                    app:iconColor="@color/colorRed"
                    app:iconLeft="@string/icon_bookmark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

            </com.duongtung.cookingman.customview.TextViewWithFontAwesome>
            <LinearLayout
                    android:id="@+id/container_time"
                    android:orientation="horizontal"
                    android:gravity="left"
                    android:layout_marginTop="@dimen/margin_10dp"
                    app:layout_constraintLeft_toRightOf="@id/iv_food"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_contentPost"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/ivAvatar"
                        android:onClick="@{(view)->callback.onAvatarClick(view,post.user)}"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="@dimen/margin_10dp"
                        app:civ_border="false"
                        android:layout_alignParentBottom="true"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:src="@drawable/gaixinh"
                        />
                <com.duongtung.cookingman.customview.TextViewWithFontAwesome
                        android:id="@+id/tv_time"
                        app:iconLeft="@string/icon_clock"
                        app:iconTextSize="15dp"
                        android:layout_marginLeft="@dimen/margin_10dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_namefood"
                        app:iconColor="@color/orange"
                        android:drawablePadding="@dimen/margin_10dp"
                        android:text="2h 30p"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                </com.duongtung.cookingman.customview.TextViewWithFontAwesome>
                <com.duongtung.cookingman.customview.TextViewWithFontAwesome
                        app:iconLeft="@string/icon_fire"
                        app:iconTextSize="15dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_namefood"
                        app:layout_constraintLeft_toRightOf="@id/tv_time"
                        app:iconColor="@color/orange"
                        android:layout_marginLeft="@dimen/margin_10dp"
                        android:drawablePadding="@dimen/margin_10dp"
                        android:text="330 cals"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                </com.duongtung.cookingman.customview.TextViewWithFontAwesome>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</layout>