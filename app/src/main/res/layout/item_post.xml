<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:fitsSystemWindows="true">
    <data>
        <variable name="post" type="com.duongtung.cookingman.model.Post"/>
        <variable
                name="callback"
                type="com.duongtung.cookingman.adapter.PostCallback" />
    </data>
    <LinearLayout
            android:background="#fff"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardElevation="4dp"
                app:cardCornerRadius="5dp"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:orientation="vertical"
                    android:padding="@dimen/margin_10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/container_headerpost"
                            android:padding="@dimen/margin_10dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <com.mikhaellopez.circularimageview.CircularImageView
                                android:layout_width="65dp"
                                android:layout_height="65dp"
                                android:id="@+id/ivAvatar"
                                android:layout_marginTop="@dimen/margin_10dp"
                                imageUrl="@{post.user.profileUrl}"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:src="@drawable/gaixinh"
                                />
                        <com.duongtung.cookingman.customview.CustomTextView
                                android:id="@+id/tvTitle"
                                android:layout_marginLeft="@dimen/itemPost_marginLeft"
                                android:text="@{post.user.nickName}"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/textview_main__content_size"
                                app:layout_constraintRight_toLeftOf="@id/tvMenuMore"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintLeft_toRightOf="@id/ivAvatar"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginTop="@dimen/itemPost_marginTop"/>
                        <com.duongtung.cookingman.customview.TextViewWithFontAwesome
                                android:id="@+id/tvMenuMore"
                                android:layout_marginTop="@dimen/itemPost_marginTop"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:iconLeft="@string/icon_menupost"
                                android:paddingLeft="@dimen/itemchatlist_padding"
                                app:iconTextSize="25sp"
                                app:iconColor="@color/colorRed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        <com.duongtung.cookingman.customview.CustomTextView
                                android:id="@+id/tvTime"
                                android:textStyle="italic"
                                android:textSize="@dimen/margin_10dp"
                                android:layout_marginLeft="@dimen/itemPost_marginLeft"
                                android:text="@{post.time}"
                                android:gravity="left"
                                app:layout_constraintRight_toRightOf="parent"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintLeft_toRightOf="@id/ivAvatar"
                                app:layout_constraintTop_toBottomOf="@id/tvTitle"
                                android:layout_marginTop="@dimen/itemPost_marginToptvTime"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <com.duongtung.cookingman.customview.CustomTextView
                            android:id="@+id/tvcontent"
                            android:layout_marginHorizontal="@dimen/margin_10dp"
                            android:text="@{post.content}"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/textview_main__content_size"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/container_headerpost"
                            android:layout_marginTop="@dimen/itemPost_marginTop"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <ImageView
                android:id="@+id/ivImage"
                android:scaleType="fitXY"
                android:onClick="@{(view)->callback.onImageFoodClick(view,post)}"
                app:layout_constraintTop_toBottomOf="@id/tvcontent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                imageUrl="@{post.recipe.imageRecipe}"
                android:layout_width="match_parent"
                android:layout_height="@dimen/itemPost_imageRecipe_heigh">
        </ImageView>
    </LinearLayout>

</layout>