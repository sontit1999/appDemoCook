<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
               xmlns:app="http://schemas.android.com/apk/res-auto"
               android:orientation="vertical"
                android:paddingHorizontal="@dimen/actionbar_padding"
                android:background="@color/colorActionbar"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize">
    <com.duongtung.cookingman.customview.TextViewWithFontAwesome
            android:id="@+id/tvReturn"
            app:iconLeft="@string/icon_menu"
            android:layout_alignParentLeft="true"
            android:drawablePadding="@dimen/margin_10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_navigation"
            app:iconTextSize="@dimen/textsize_tvActionbar"
            android:textSize="@dimen/textsize_tvActionbar"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <ImageView
            android:id="@+id/iv_logo"
            android:layout_centerHorizontal="true"
            android:layout_width="107dp"
            android:layout_height="64dp"
            android:src="@drawable/logo"
    />
    <com.duongtung.cookingman.customview.TextViewWithFontAwesome
            android:id="@+id/tvEarth"
            app:iconLeft="@string/icon_earth"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/tvSearch"
            android:drawablePadding="@dimen/margin_10dp"
            android:layout_centerVertical="true"
            app:iconTextSize="@dimen/textsize_tvActionbar"
            android:textSize="@dimen/textsize_tvActionbar"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <com.duongtung.cookingman.customview.TextViewWithFontAwesome
            android:id="@+id/tvSearch"
            app:iconLeft="@string/icon_search"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:drawablePadding="@dimen/margin_10dp"
            android:layout_centerVertical="true"
            app:iconTextSize="@dimen/textsize_tvActionbar"
            android:textSize="@dimen/textsize_tvActionbar"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</RelativeLayout>