<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/nav_home"
        app:startDestination="@id/homeFragment">
    <keep_state_fragment
            android:id="@+id/homeFragment"
            android:name="com.duongtung.cookingman.fragment.home.HomeFragment"
            android:label="HomeFragment" >
        <action
                android:id="@+id/action_homeFragment_to_detailCookFragment"
                app:destination="@id/detailCookFragment" />
    </keep_state_fragment>
    <keep_state_fragment
            android:id="@+id/recipeFragment"
            android:name="com.duongtung.cookingman.fragment.recipe.RecipeFragment"
            android:label="RecipeFragment" >
    </keep_state_fragment>
    <keep_state_fragment
            android:id="@+id/newFeedsFragment"
            android:name="com.duongtung.cookingman.fragment.newfeed.NewFeedsFragment"
            android:label="NewFeedsFragment" />
    <keep_state_fragment
            android:id="@+id/profileFragment"
            android:name="com.duongtung.cookingman.fragment.profile.ProfileFragment"
            android:label="ProfileFragment" />
    <keep_state_fragment
            android:id="@+id/chatFragment"
            android:name="com.duongtung.cookingman.fragment.chat.ChatFragment"
            android:label="chatFragment" >
        <action
                android:id="@+id/action_chatfragment_to_detailChatFragment"
                app:destination="@+id/detailChatFragment" />
    </keep_state_fragment>
    <keep_state_fragment
            android:id="@+id/settingFragment"
            android:name="com.duongtung.cookingman.fragment.setting.SettingFragment"
            android:label="settingFragment" />
    <keep_state_fragment
            android:id="@+id/favoriteFragment"
            android:name="com.duongtung.cookingman.fragment.favorite.FavoriteFragment"
            android:label="favoriteFragment" />
    <keep_state_fragment
            android:id="@+id/detailCookFragment"
            android:name="com.duongtung.cookingman.fragment.detailcook.DetailCookFragment"
            android:label="DetailCookFragment">
        <argument
                android:name="name"
                app:argType="string"
                app:nullable="true" />
    </keep_state_fragment>
    <keep_state_fragment
            android:id="@+id/SearchResultFragment"
            android:name="com.duongtung.cookingman.fragment.resultsearch.ResultSearchFragment"
            android:label="SearchResultFragment" />
    <keep_state_fragment
            android:id="@+id/detailChatFragment"
            android:name="com.duongtung.cookingman.fragment.detailchat.DetailChatFragment"
            android:label="DetailFragment" />
    <keep_state_fragment
            android:id="@+id/Shoppingfragment"
            android:name="com.duongtung.cookingman.fragment.shopping.ShoppingFragment"
            android:label="ShoppingFragment" />
    <keep_state_fragment
            android:id="@+id/SelfProfileFragmenet"
            android:name="com.duongtung.cookingman.ui.profile.ProfileActivity"
            android:label="SelfProfile" />
</navigation>